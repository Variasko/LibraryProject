<Page x:Class="LibrarryDesktop.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibrarryDesktop.Views.Pages"
      xmlns:vm="clr-namespace:LibrarryDesktop.ViewModels.PagesViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <d:Page.DataContext>
        <vm:ProfilePageViewModel/>
    </d:Page.DataContext>

    <Grid>
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Здравствуйте,"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TitleTextBlockStyle}"/>
                <TextBlock Margin="10"
                           Style="{DynamicResource TitleTextBlockStyle}">
                    <Run Text="{Binding Surname}"/>
                    <Run Text="{Binding Name}"/>
                    <Run Text="{Binding Patronymic}"/>
                    <Run Text="!"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Ваша должность: "/>
                    <Run Text="{Binding PostName}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <Button VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="20"
                Content="Выйти"
                Style="{DynamicResource CancelButtonStyle}"
                Command="{Binding SignOutCommand}"/>

    </Grid>
</Page>
