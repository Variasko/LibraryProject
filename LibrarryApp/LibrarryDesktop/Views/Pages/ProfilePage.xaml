<Page x:Class="LibrarryDesktop.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibrarryDesktop.Views.Pages"
      xmlns:vm="clr-namespace:LibrarryDesktop.ViewModels.PagesViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <d:Page.DataContext>
        <vm:ProfilePageViewModel/>
    </d:Page.DataContext>

    <Grid>
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="15">
            <StackPanel>
                <TextBlock Text="{Binding Surname}" Margin="10 0 10 10"/>
                <TextBlock Text="{Binding Name}" Margin="10 0 10 10"/>
                <TextBlock Text="{Binding Patronymic}" Margin="10 0 10 10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
