<Page x:Class="LibrarryDesktop.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:LibrarryDesktop.ViewModels.PagesViewModels"
      xmlns:local="clr-namespace:LibrarryDesktop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <d:Page.DataContext>
        <vm:SettingsPageViewModel/>
    </d:Page.DataContext>

    <Grid>
        <StackPanel Margin="150 10">
            <TextBlock Text="Стиль приложения"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="20 10 20 10"/>
            <ComboBox ItemsSource="{Binding ThemeEnums}"
                      SelectedItem="{Binding SelectedTheme}"
                      DisplayMemberPath="ThemeName"
                      HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <TextBlock Text="Айпи для подключения к АПИ"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="0 10"/>
            <TextBox HorizontalAlignment="Center"
                     Width="200"
                     Margin="0 0 0 20"
                     Text="{Binding HostAddress}"/>

            <TextBlock Text="Таймаут подключения к апи"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="0 10"/>
            <TextBox HorizontalAlignment="Center"
                     Width="100"
                     Text="{Binding TimeOut}"/>

            <Button Content="Сохранить"
                    HorizontalAlignment="Center"
                    Style="{DynamicResource SaveButtonStyle}"
                    Margin="20 50"
                    Command="{Binding SaveSettings}"
                    Padding="0"/>
        </StackPanel>
    </Grid>
</Page>