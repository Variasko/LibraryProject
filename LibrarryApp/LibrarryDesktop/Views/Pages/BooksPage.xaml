<Page x:Class="LibraryDesktop.Views.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LibraryDesktop.Views.Pages"
      xmlns:vm="clr-namespace:LibraryDesktop.ViewModels.PagesViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksPage">
    <d:Page.DataContext>
        <vm:BooksPageViewModel/>
    </d:Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Books}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="20,10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Tag="{Binding Id}" Margin="10"
                                MouseDown="Border_MouseDown">
                            <StackPanel>
                                <TextBlock Style="{DynamicResource SubtitleTextBlockStyle}">
                                    <Run Text="Наименование: "/>
                                    <Run Text="{Binding Title}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Артикул:"/>
                                    <Run Text="{Binding Id}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Автор:"/>
                                    <Run Text="{Binding Author.Surname}"/>
                                    <Run Text="{Binding Author.Name}"/>
                                    <Run Text="{Binding Author.Patronymic}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Годы жизни:"/>
                                    <Run Text="{Binding Author.BirthYear}"/>
                                    <Run Text="-"/>
                                    <Run Text="{Binding Author.DeathYear}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Количество книг на складе:"/>
                                    <Run Text="{Binding Amount}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
