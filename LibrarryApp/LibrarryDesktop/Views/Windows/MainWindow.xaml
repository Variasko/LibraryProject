<Window x:Class="LibraryDesktop.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDesktop.Views.Windows"
        xmlns:vm="clr-namespace:LibraryDesktop.ViewModels.WindowsViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="1000"
        Background="{DynamicResource ApplicationBackground}">

    <d:Window.DataContext>
        <vm:MainWindowViewModel/>
    </d:Window.DataContext>

    <TabControl>
        <TabItem Header="Профиль">
            <Frame Margin="20"
                   Content="{Binding ProfilePage}"
                   NavigationUIVisibility="Hidden"/>
        </TabItem>
        <TabItem Header="2"/>
        <TabItem Header="Настройки">
            <Frame Margin="20"
                   Content="{Binding SettingsPage}"
                   NavigationUIVisibility="Hidden"/>
        </TabItem>
    </TabControl>
    
</Window>
