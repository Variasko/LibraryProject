<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ######################## -->
    <!-- # Стиль для GroupBox # -->
    <!-- ######################## -->

    <Style TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{DynamicResource GroupBoxBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GroupBoxHeaderForeground}" />
        <Setter Property="Background" Value="{DynamicResource GroupBoxBackground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                Grid.RowSpan="2"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" />
                        <Border Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                Padding="5,2">
                            <ContentPresenter Grid.Row="0"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="5,0" />
                        </Border>
                        <ContentPresenter Grid.Row="1"
                                          Margin="{TemplateBinding Padding}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>