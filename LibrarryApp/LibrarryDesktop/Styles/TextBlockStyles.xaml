<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ######################## -->
    <!-- # Стили для TextBlock # -->
    <!-- ######################## -->

    <!-- Стиль по умолчанию для обычного текста -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBlockForeground}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Стиль для заголовков -->
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBlockTitleForeground}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- Стиль для подзаголовков -->
    <Style x:Key="SubtitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBlockSubtitleForeground}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <!-- Стиль для меток (например, рядом с полями ввода) -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBlockLabelForeground}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>